
@mixin ItalicFont($fontSize) {
    font-family: TrebuchetMS;
    font-style: Italic;
    font-size: $fontSize;
}

.RedBackground {
    @include ItalicFont(14);
    background-color: red;
}

.BlueCircle {
    background-color: blue;
    corner-radius: circle;
}

.ButtonCls {
    background-color: blue;
}

.ButtonCls:selected {
    background-color: green;
}

.ButtonCls:highlighted {
    background-color: red;
}

.ButtonCls:disabled {
    background-color: gray;
}